%ul
- @activities.each do |activity|
  %li.activity
    = pretty_print_date(activity[:date])
    = pretty_print_place(activity[:place])
    %ul
      - if activity[:beachclean]
        %li
          &raquo;
          = link_to "Beach clean (#{activity[:items]} items)", items_scope_path(activity[:scope_id]), { class: 'activity' }
      - if activity[:whalewatch]
        %li
          &raquo;
          = link_to 'Observations', scope_observations_path(activity[:scope_id]), { class: 'activity' }
