
%h3 Send us a message

- if flash[:error]
  = flash[:error]

- if flash[:success]
  = flash[:success]

= form_for @message, :url => create_message_path(@message) do |form|

  = form.label :name, 'Name'
  = form.text_field :name

  = form.label :email, 'Email address'
  = form.email_field :email

  = form.label :text, 'Message'
  = form.text_area :text

  = form.submit 'Send'

