%ul
  - @items.each_with_index do |item|
    %a{ href: '#', class: 'item', 'data-item-category' => item.category.code }
      %li.item
        %span.item-component.name
          = item.category.full_name
        %span.item-component
          %span.item-component.plus{ 'data-item-category' => item.category.code }
            = "+"
          %span.item-component.count{ 'data-item-category' => item.category.code }
            = item.quantity
          %span.item-component.minus{ 'data-item-category' => item.category.code }
            = "-"
