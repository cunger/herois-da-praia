
= form_tag('/analytics/query') do
  %fieldset.horizontal
    %legend Time period
    = label_tag :startDate, 'From:'
    = date_field_tag :startDate, Time.now.strftime("%Y-%m-%d")
    %br
    = label_tag :endDate, 'To:'
    = date_field_tag :endDate, Time.now.strftime("%Y-%m-%d")

  %fieldset.horizontal
    %legend People
    - UserGroup.each do |group|
      - next if group.code == 'dev'
      = check_box_tag(group.code)
      = group.full_name
      %br

  = submit_tag 'Get data'
